{
  "manifest_version": 3,
  "name": "RobuxToTix",
  "version": "1.0",
  "description": "Replaces the Robux icon next to your account balance with the Tix icon on Roblox.com",
  "permissions": ["activeTab"],
  "action": {
    "default_icon": {
      "16": "/icons/tix_icon.png",
      "48": "/icons/tix_icon.png",
      "128": "/icons/tix_icon.png"
    }
  },
  "icons": {
    "16": "/icons/tix_icon.png",
    "48": "/icons/tix_icon.png",
    "128": "/icons/tix_icon.png"
  },
  "content_scripts": [
    {
      "matches": ["https://www.roblox.com/*"],
      "js": ["content.js"]
    }
  ]
}
